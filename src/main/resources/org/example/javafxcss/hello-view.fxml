<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Label?>
<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.example.javafxcss.HelloController" hgap="10" vgap="10"
          stylesheets="@styles.css">

    <Button text="Button One" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Button text="Button Two" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Button id="button_three" text="Button Three" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
    <Button fx:id="button4" text="Button Four" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
    <RadioButton text="Choice 1" GridPane.rowIndex="1" GridPane.columnIndex="0"/>

    <Label fx:id="label" text="JavaFX Effects" GridPane.rowIndex="1" GridPane.columnIndex="1"
            onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit" />

</GridPane>
